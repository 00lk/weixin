<!--pages/index/index.wxml-->
<van-search
  value="{{ value }}"
  placeholder="请输入搜索关键词"
  use-action-slot
  bind:change="onChange"
  bind:search="onSearch"
>
  <view slot="action" bind:tap="onClick">搜索</view>
</van-search>
<van-button type="default" bindtap="goToAdd">默认按钮</van-button>
<van-tabbar active="{{ active }}" bind:change="onChange">
  <van-tabbar-item name="home" icon="home-o">首页</van-tabbar-item>
  <van-tabbar-item name="search" icon="search">发现</van-tabbar-item>
  <van-tabbar-item name="friends" icon="friends-o" open-type="getUserInfo" bindgetuserinfo="getUserInfo" bindtap="goToAdd">我的</van-tabbar-item>
  
</van-tabbar>
